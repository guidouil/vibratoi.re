<%- contentFor('extraHead') %>
<script type="module">
  import "https://cdn.jsdelivr.net/npm/emoji-picker-element@1.22.8/index.js";
  import fr from "https://cdn.jsdelivr.net/npm/emoji-picker-element@1.22.8/i18n/fr.js";
  document.addEventListener("DOMContentLoaded", () => {
    const picker = document.querySelector("emoji-picker");
    picker.i18n = fr;
    picker.locale = "fr";
    picker.dataSource =
      "https://cdn.jsdelivr.net/npm/emojibase-data@15.3.2/fr/data.json";
  });
  document
    .querySelector("emoji-picker")
    .addEventListener("emoji-click", (event) => {
      // console.log(event.detail);
      window.location.assign(`/${event.detail.unicode}`);
    });
</script>

