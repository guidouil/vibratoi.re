<%- contentFor('body') %>
<!-- <div class="large-space"></div> -->
<div class="center-align">
  <div id="fortune-cookie">🥠</div>
  <p class="small" id="fortune-cookie-text">
    Cliquez sur le cookie pour révéler votre fortune vibratoi.®e
  </p>
</div>

<div id="prediction" class="prediction-card" style="display: none">
  <div class="prediction-positif">
    <p class="prediction-title">✨ Message du Cookie :</p>
    <p class="center-align"><%= prediction.message %>.</p>
  </div>

  <div class="prediction-conseil">
    <p class="prediction-title">🌟 Conseil Vibratoire :</p>
    <p class="center-align"><%= prediction.conseil %>.</p>
  </div>

  <div class="prediction-conclusion">
    <p class="prediction-title">🥠 Conclusion</p>
    <p class="center-align"><%= prediction.conclusion %>.</p>
  </div>
</div>

<%- contentFor('scripts') %>
<script>
  document
    .getElementById("fortune-cookie")
    .addEventListener("click", function () {
      this.textContent = "🍪";
      document.getElementById("prediction").style.display = "block";
      document.getElementById("fortune-cookie-text").style.display = "none";

      if (navigator.vibrate) {
        navigator.vibrate([100, 50, 100]);
      }
    });
</script>
