<%- contentFor('body') %>
<div id="prediction" class="prediction-card">
  <div class="horloge">
    <p class="center-align" id="date-heure"></p>
  </div>
  <div class="prediction-positif">
    <p class="prediction-title">✨ Positif : </p>
    <p><%= prediction.message.positif %>.</p>
  </div>
  <div class="prediction-conseil">
    <p class="prediction-title">🌟 Conseil :</p>
    <p><%= prediction.message.conseil %>.</p>
  </div>
  <div class="prediction-avertissement">
    <p class="prediction-title">⚠️ Avertissement :</p>
    <p><%= prediction.message.avertissement %>.</p>
  </div>
  <div class="prediction-conclusion">
    <p class="prediction-title">🔮 Conclusion</p>
    <%= prediction.message.conclusion %>.
  </p>
</div>

<%- contentFor('scripts') %>
<script>
function afficherHeure() {
    // il faut mettre le premier mot avec une lettre majuscule
    const maintenant = new Date();
    const options = {
        weekday: 'long',
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: false
    };
    document.getElementById('date-heure').innerHTML = maintenant.toLocaleDateString('fr-FR', options).replace(/(\b\w)/g, (char) => char.toUpperCase()) ;
}

afficherHeure();
setInterval(afficherHeure, 1000);
</script>
