<%- contentFor('body') %>
<div id="prediction" class="prediction-card">
  <div class="prediction-positif">
    <p class="prediction-title">✨ Positif : </p>
    <p><%= prediction.message.positif %>.</p>
  </div>
  <div class="prediction-conseil">
    <p class="prediction-title">🌟 Conseil :</p>
    <p><%= prediction.message.conseil %>.</p>
  </div>
  <div class="prediction-avertissement">
    <p class="prediction-title">⚠️ Avertissement :</p>
    <p><%= prediction.message.avertissement %>.</p>
  </div>
  <div class="prediction-conclusion">
    <p class="prediction-title">🔮 Conclusion</p>
    <%= prediction.message.conclusion %>.
  </p>
</div>
